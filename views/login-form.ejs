<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
  </head>

  <body>
    <main>
      <h1>Welcome Back</h1>
      <p>Enter the clubhouse to join the conversation</p>

      <form action="/login" method="POST">
        <label for="email">Email Address</label>
        <input
          id="email"
          name="email"
          placeholder="you@example.com"
          type="email"
          value="<%= locals.user?.email ?? "" %>"
          required
        />
        <%- include("partials/error.ejs", { field: "email" }) %>

        <label for="password">Password</label>
        <input
          id="password"
          name="password"
          placeholder="Enter your password"
          type="password"
          required
        />
        <%- include("partials/error.ejs", { field: "password" }) %>

        <%- include("partials/error.ejs") %>

        <button type="submit">Log In</button>
      </form>
    </main>
  </body>
</html>
